<?xml version="1.0"?>
<bindings id="wf2-bindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">

<binding id="default">
 <implementation>
  <constructor>
	if (this.hasAttribute("autofocus")) {
		this.focus();
	}
  </constructor>
 </implementation>
</binding>

<binding id="number" extends="#default">
 <content>
  <html:span html:style="display:none"><children /></html:span>
  <xul:textbox type="number" xbl:inherits="onfocus,onblur,min,max,increment=step,value,disabled,readonly,tabindex,accesskey" />
      <!--xul:hbox class="textbox-input-box numberbox-input-box" flex="1" xbl:inherits="context" width="80">
        <children />
       <xul:spinbuttons anonid="buttons" xbl:inherits="disabled,hidden=hidespinbuttons"/>
      </xul:hbox-->
 </content>
</binding>

<binding id="range" extends="#default">
 <content>
  <html:span html:style="display:none"><children /></html:span>
  <xul:scale orient="horizontal" style="cursor:default"
   xbl:inherits="onfocus,onblur,value,disabled,readonly,tabindex,accesskey,min,max" />
 </content>
</binding>

<binding id="date" extends="#default">
 <content>
  <html:span html:style="display:none"><children /></html:span>
  <xul:datepicker type="popup" xbl:inherits="onfocus,onblur,value,disabled,readonly,tabindex,accesskey"/>
 </content>
</binding>

<binding id="week" extends="#date">
</binding>

<binding id="time" extends="#default">
 <content>
  <html:span html:style="display:none"><children /></html:span>
  <xul:timepicker type="number" xbl:inherits="onfocus,onblur,increment=step,value,disabled,readonly,tabindex,accesskey" />
 </content>
</binding>

</bindings>
