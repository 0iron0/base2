<?xml version="1.0"?>
<bindings id="wf2-bindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">

<binding id="control">
 <implementation>
  <constructor>
	if (this.hasAttribute("autofocus")) {
		this.focus();
	}
  </constructor>
 <implementation>
</binding>

<binding id="spinner" extends="#control">
 <content>
  <html:div style="display:none"><children /></html:div>
  <xul:box style="height:10px">
   <html:input style="height:10px; font-size:6px"/>
   <xul:scrollbar orient="vertical">
    <xul:scrollbarbutton type="decrement" style="height:5px"/>
    <xul:scrollbarbutton type="increment" style="height:5px"/>
   </xul:scrollbar>
  </xul:box>
 </content>
</binding>

<binding id="slider" extends="#control">
 <content>
  <children />
  <xul:textbox type="number" />
  <html:br />
  <xul:scale min="1" max="10" />
  <html:br />
  <xul:scale min="1" max="10" orient="vertical" />
  <html:br />
  <xul:timepicker />
  <html:br />
  <xul:datepicker value="2008/08/24"/>
  <html:br />
  <xul:datepicker type="grid" value="2008/08/24"/>
  <html:br />
  <xul:datepicker type="popup" value="2008/08/24"/>
  <html:br />
  <xul:progressmeter min="1" max="10" />
  <html:br />
  <xul:progressmeter min="1" max="10" orient="vertical" />
 </content>
</binding>

<binding id="dropdown" extends="#control">
</binding>

<binding id="date" extends="#dropdown">
</binding>

<binding id="week" extends="#date">
</binding>

<binding id="number">
 <content>
  <html:div style="display:none"><children /></html:div>
  <xul:textbox type="number" />
 </content>
</binding>

<binding id="range" extends="#slider">
</binding>

</bindings>
